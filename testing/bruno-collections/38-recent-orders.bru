meta {
  name: 38. Get Recent Orders
  type: http
  seq: 38
}

get {
  url: http://localhost:8083/api/orders/recent?limit=10
  body: none
  auth: bearer
}

headers {
  Authorization: Bearer {{authToken}}
  Content-Type: application/json
}

tests {
  test("Recent orders retrieved", function() {
    expect(res.status).to.equal(200);
    expect(res.body).to.be.an('array');
  });
  
  test("Order limit respected", function() {
    expect(res.body.length).to.be.at.most(10);
  });
  
  test("Orders contain required fields", function() {
    if (res.body.length > 0) {
      res.body.forEach(order => {
        expect(order).to.have.property('id');
        expect(order).to.have.property('status');
        expect(order).to.have.property('createdAt');
        expect(order).to.have.property('totalAmount');
      });
    }
  });
}