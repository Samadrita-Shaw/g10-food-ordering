meta {
  name: 29. Search Restaurants
  type: http
  seq: 29
}

get {
  url: http://localhost:8082/api/restaurants/search?name=pizza&city=New York
  body: none
  auth: none
}

headers {
  Content-Type: application/json
}

tests {
  test("Search results returned", function() {
    expect(res.status).to.equal(200);
    expect(res.body).to.be.an('array');
  });
  
  test("Search filters applied", function() {
    if (res.body.length > 0) {
      res.body.forEach(restaurant => {
        expect(restaurant.name.toLowerCase()).to.include('pizza');
      });
    }
  });
}