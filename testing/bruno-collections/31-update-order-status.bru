meta {
  name: 31. Update Order Status
  type: http
  seq: 31
}

put {
  url: http://localhost:8083/api/orders/{{orderId}}/status
  body: json
  auth: none
}

headers {
  Content-Type: application/json
}

body:json {
  {
    "status": "CONFIRMED",
    "updatedBy": "restaurant_manager",
    "notes": "Order confirmed and being prepared"
  }
}

tests {
  test("Order status updated", function() {
    expect(res.status).to.equal(200);
    expect(res.body).to.have.property('success');
    expect(res.body.success).to.equal(true);
  });
  
  test("Status change recorded", function() {
    expect(res.body).to.have.property('status');
    expect(res.body.status).to.equal('CONFIRMED');
  });
}