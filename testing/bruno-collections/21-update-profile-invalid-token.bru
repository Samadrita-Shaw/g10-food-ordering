meta {
  name: Update Profile - Invalid Token
  type: http
  seq: 2
}

put {
  url: {{userServiceUrl}}/api/users/profile
  body: json
  auth: none
}

headers {
  Authorization: Bearer invalid_token_here
  Content-Type: application/json
}

body:json {
  {
    "id": "test_user_id",
    "email": "updated@example.com",
    "name": "Updated Name",
    "phone": "+9999999999",
    "role": "CUSTOMER"
  }
}

tests {
  test("Profile update fails with invalid token", function() {
    expect(res.status).to.equal(401);
    expect(res.body).to.have.property('error');
    expect(res.body.error).to.include('Invalid or expired token');
  });
}
