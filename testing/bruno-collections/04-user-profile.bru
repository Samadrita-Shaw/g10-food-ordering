meta {
  name: 4. Get User Profile
  type: http
  seq: 4
}

get {
  url: http://localhost:8081/api/users/profile
  body: none
  auth: none
}

headers {
  Authorization: Bearer {{authToken}}
  Content-Type: application/json
}

tests {
  test("Profile retrieved successfully", function() {
    expect(res.status).to.equal(200);
    expect(res.body).to.have.property('email');
    expect(res.body.email).to.equal('testuser@example.com');
  });
  
  test("Profile contains required fields", function() {
    expect(res.body).to.have.property('name');
    expect(res.body).to.have.property('role');
    expect(res.body.name).to.equal('Test User');
    expect(res.body.role).to.equal('CUSTOMER');
  });
}
