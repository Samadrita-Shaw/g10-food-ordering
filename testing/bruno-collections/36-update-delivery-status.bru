meta {
  name: 36. Update Delivery Status
  type: http
  seq: 36
}

put {
  url: http://localhost:8085/api/delivery/{{deliveryId}}/status
  body: json
  auth: bearer
}

headers {
  Authorization: Bearer {{authToken}}
  Content-Type: application/json
}

body:json {
  {
    "status": "PICKED_UP",
    "location": {
      "latitude": 40.7128,
      "longitude": -74.0060
    },
    "notes": "Order picked up from restaurant",
    "estimatedArrival": "2025-11-21T13:30:00"
  }
}

tests {
  test("Delivery status updated", function() {
    expect(res.status).to.equal(200);
    expect(res.body).to.have.property('success');
    expect(res.body.success).to.equal(true);
  });
  
  test("Status change recorded", function() {
    expect(res.body).to.have.property('status');
    expect(res.body.status).to.equal('PICKED_UP');
  });
  
  test("Location information updated", function() {
    expect(res.body).to.have.property('currentLocation');
  });
}