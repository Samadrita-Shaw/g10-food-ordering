meta {
  name: 32. Get User Orders
  type: http
  seq: 32
}

get {
  url: http://localhost:8083/api/orders/user/{{userId}}
  body: none
  auth: bearer
}

headers {
  Authorization: Bearer {{authToken}}
  Content-Type: application/json
}

tests {
  test("User orders retrieved", function() {
    expect(res.status).to.equal(200);
    expect(res.body).to.be.an('array');
  });
  
  test("Orders belong to user", function() {
    if (res.body.length > 0) {
      res.body.forEach(order => {
        expect(order).to.have.property('userId');
        expect(order).to.have.property('status');
        expect(order).to.have.property('totalAmount');
      });
    }
  });
}