meta {
  name: 30. Get Restaurants by Cuisine
  type: http
  seq: 30
}

get {
  url: http://localhost:8082/api/restaurants/cuisine/Italian
  body: none
  auth: none
}

headers {
  Content-Type: application/json
}

tests {
  test("Cuisine filter applied", function() {
    expect(res.status).to.equal(200);
    expect(res.body).to.be.an('array');
  });
  
  test("All restaurants match cuisine", function() {
    if (res.body.length > 0) {
      res.body.forEach(restaurant => {
        expect(restaurant.cuisineType.toLowerCase()).to.include('italian');
      });
    }
  });
}