meta {
  name: 2. User Registration
  type: http
  seq: 2
}

post {
  url: http://localhost:8081/api/users/register
  body: json
  auth: none
}

headers {
  Content-Type: application/json
}

body:json {
  {
    "email": "testuser@example.com",
    "password": "SecurePass123!",
    "name": "Test User",
    "phone": "+1234567890",
    "role": "CUSTOMER"
  }
}

tests {
  test("User registration successful", function() {
    expect(res.status).to.equal(201);
    expect(res.body).to.have.property('success');
    expect(res.body.success).to.equal(true);
    expect(res.body).to.have.property('token');
  });
  
  test("Response contains auth token", function() {
    expect(res.body.token).to.be.a('string');
    expect(res.body.token.length).to.be.above(0);
    
    // Save token for future requests
    bru.setEnvVar("authToken", res.body.token);
  });
}
