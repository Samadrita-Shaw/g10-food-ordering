meta {
  name: 34. Process Payment Refund
  type: http
  seq: 34
}

post {
  url: http://localhost:8084/api/payments/refund
  body: json
  auth: bearer
}

headers {
  Authorization: Bearer {{authToken}}
  Content-Type: application/json
}

body:json {
  {
    "transactionId": "TXN_123456789",
    "refundAmount": 25.99,
    "reason": "Order cancelled by customer",
    "refundMethod": "ORIGINAL_PAYMENT_METHOD"
  }
}

tests {
  test("Refund processed successfully", function() {
    expect(res.status).to.equal(200);
    expect(res.body).to.have.property('success');
    expect(res.body.success).to.equal(true);
  });
  
  test("Refund details provided", function() {
    expect(res.body).to.have.property('refundId');
    expect(res.body).to.have.property('refundAmount');
    expect(res.body).to.have.property('status');
    expect(res.body.status).to.equal('PROCESSED');
  });
}